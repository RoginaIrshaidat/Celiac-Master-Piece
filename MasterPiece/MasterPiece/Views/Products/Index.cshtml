@model IEnumerable<MasterPiece.Models.Product>

@{
    ViewBag.Title = "All Products";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<body>
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Products</h4>
                            <p class="card-description">
                                @Html.ActionLink("Create new Product", "Create", "", new { @class = "btn btn-success" })
                            </p>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.Product_Name)</th>
                                            <th> @Html.DisplayNameFor(model => model.Product_Description)</th>
                                            <th> @Html.DisplayNameFor(model => model.Price)</th>
                                            <th> @Html.DisplayNameFor(model => model.Main_Image)</th>
                                            <th> Action </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var product in Model)
                                        {
                                            <tr>
                                                <td>@product.Product_Name</td>
                                                <td>@product.Product_Description</td>
                                                <td>@product.Price</td>
                                                <td>@product.Main_Image</td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id = product.Product_ID }, new { @class = "btn btn-secondary" })|
                                                    @Html.ActionLink("Details", "Details", new { id = product.Product_ID }, new { @class = "btn btn-info" })|
                                                    @Html.ActionLink("Delete", "Delete", new { id = product.Product_ID }, new { @class = "btn btn-danger" })|
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
